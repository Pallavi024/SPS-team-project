<%- include ("../partials/header")%>
<div class="container-fluid report-page">
    <div class="text-center">
      <h2>Share Report</h2>
    </div>
    <div class="row text-center>
        <div class="row">
            <div class="col-12 report">
                <div class="card">
                    <div class="card-horizontal">
                        <div class="img-square-wrapper">
                            <img class="shared-image" src="<%= img %>" alt="report">
                        </div>
                        <div class="card-body">
                            <p class="report-description card-text"><%= description%></p>
                        </div>
                    </div>
                    <div class="card-footer">
                        <form method="POST">
                            <input type="hidden" name="reportid" value="<%= img %>">
                            <input type="hidden" name="description" value="<%= description %>">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1">@</span>
                                </div>
                                <input type="text" name="email" class="form-control" placeholder="Email" aria-label="Username" aria-describedby="basic-addon1">
                                <button type="submit" class="btn btn-secondary">Share Report</button>
                            </div>
                        </form>
                        <div class="success">
                            <% if(success !== 'undefined') { %>
                            <%= success %>
                            <% } %>
                        </div>
                        <div class="error">
                            <% if(error !== 'undefined') { %>
                            <%= error %>
                            <% } %>
                        </div>
                    </div>
                    <!--<div class="card-footer">
                        <form action="/report/share" method="POST">
                            <input type="hidden" name="imageUrl" value="<%= img %>">
                            <button type="submit" class="btn btn-secondary">Share Report</button>
                        </form>
                    </div>-->
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ("../partials/footer")%>