<%- include ("../partials/header")%>

  <div class="container">
    <h1 class="mb-4">Health Blog Articles</h1>
    <a href="/articles/new" class="btn btn-success">New Article</a>
     <% articles.forEach(article => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= article.articleData.Title %></h4>
          <div class="card-text mb-2"><%= article.articleData.Description %></div>
           <a href="articles/<%= article.id %>" class="btn btn-primary">Read More</a>
          <a href="/articles/edit/<%= article.id %>" class="btn btn-info">Edit</a>
          <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    <% }) %>
     
  </div>
<%- include ("../partials/footer")%>
