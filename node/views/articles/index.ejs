<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Health Blog</title>
</head>
<body>
  <div class="container">
    <h1 class="mb-4">Health Blog Articles</h1>
    <a href="/articles/new" class="btn btn-success">New Article</a>
     <% articles.forEach(article => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= article.data().Title %></h4>
          <div class="card-text mb-2"><%= article.data().Description %></div>
          <div class="card-text mb-2"><%= article.data().Markdown %></div>
        </div>
      </div>
    <% }) %>
     
  </div>
</body>